<% include ./partials/head %>
<% include ./partials/header %>
<% include ./partials/navbar %>

<div class='code-snip-app'>

  <div class='sidebar-content'>
    <% include ./partials/sidebar %>
  </div>

  <div class='main-content'>
      <form action='/snip/create %>' method='POST'>
      <h1>Create new snippet</h1>
      <label for="title">Title</label>
      <input type="text" name="title" value="">
      <label for="language">Language</label>
      <input type="text" name="language" value="">

      <label for="notes">Notes</label>
      <input type="text" name="notes" value="">

      <div class="form-check">
        <label class="form-check-label">
          <input name="tags" class="form-check-input" type="checkbox" value="front-end">
            Front End
        </label>
        <label class="form-check-label">
          <input name="tags" class="form-check-input" type="checkbox" value="back-end">
            Back End
        </label>
      </div>

      <div class='editor'>
        <textarea name='code' class='snippet' id="" rows="8" cols="40">Code goes here</textarea>
      </div>

        <input type="submit" value="Submit"></input>
      </form>

  </div>

</div>

<% include ./partials/footer %>
