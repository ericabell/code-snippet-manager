<% include ./partials/head %>
<% include ./partials/header %>
<% include ./partials/navbar %>

<div class='code-snip-app'>

  <div class='sidebar-content'>
    <% include ./partials/sidebar %>
  </div>

  <div class='main-content'>
      <form action='/snip/create %>' method='POST'>
        <h1>Create new snippet</h1>
          <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="title" value="">
          </div>

          <div class="form-group">
            <label for="language">Language</label>
            <select class="form-control" name="language">
              <option value="javascript">Javascript</option>
              <option value="python">Python</option>
            </select>
          </div>

          <div class="form-group">
            <label for="notes">Notes</label>
            <input class="form-control" type="text" name="notes" value="">
          </div>

          <div id="tag-form-group" class="form-group">
            <label for="tags">Tags</label>
            <input class="form-control" type="text" name="tags" value="" />
          </div>

          <button id="add-tag-button" class="btn btn-primary" type="button">Add Tag</button>

          <div class='editor'>
            <textarea name='code' class='snippet' id="" rows="8" cols="40">Code goes here</textarea>
          </div>

        <input type="submit" class="btn btn-primary" value="Submit"></input>
      </form>

  </div>

</div>

<% include ./partials/footer %>
